#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>
echo "-----> Starting VesspC"

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR
ls
vcompile

